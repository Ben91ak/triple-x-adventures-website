# Triple-X Adventures Environment Configuration Example
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
# Format: postgresql://username:password@hostname:port/database?sslmode=require
DATABASE_URL="postgresql://username:password@hostname:port/database?sslmode=require"

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration
# Generate strong random strings for these secrets
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="generate-a-strong-random-string-here"
SESSION_SECRET="generate-a-different-strong-random-string-here"

# Email Configuration
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password"

# API Keys
# Google Places API Configuration
GOOGLE_PLACES_API_KEY="your-google-places-api-key"
GOOGLE_PLACE_ID="your-google-place-id"

# Weatherstack API Configuration
WEATHERSTACK_API_KEY="your-weatherstack-api-key"

# Rate Limiting Configuration
# Maximum number of requests per window
RATE_LIMIT_MAX=100
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS="https://triple-x-adventures.com,https://www.triple-x-adventures.com"
